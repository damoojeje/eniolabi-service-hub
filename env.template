# Eniolabi Service Hub - Environment Configuration Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://your_username:your_password@localhost:5432/eniolabi_service_hub"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection URL
REDIS_URL="redis://:your_redis_password@localhost:6379"

# Redis host and port (alternative to REDIS_URL)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js configuration
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secure-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# JWT secret for token signing
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_JWT_SECRET="your-jwt-secret-here"

# Admin user password (used for seeding database)
# This will be the initial password for the admin user
ADMIN_PASSWORD="replaceme123"

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP server configuration for email notifications
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="Service Hub <noreply@yourdomain.com>"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Node.js environment
NODE_ENV="development"

# Application port
PORT="3000"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Bcrypt rounds for password hashing (12 is recommended)
BCRYPT_ROUNDS="12"

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED="1"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable file watching for development
WATCHPACK_POLLING="true"

# Enable Fast Refresh
FAST_REFRESH="true"

# Disable SWC minification in development
SWC_MINIFY="false"

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production deployment
# NODE_ENV="production"
# PORT="3003"
# NEXTAUTH_URL="https://yourdomain.com"
# DATABASE_URL="postgresql://prod_user:prod_password@prod_host:5432/prod_database"
# REDIS_URL="redis://:prod_redis_password@prod_host:6379"

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit this file to version control
# 2. Use strong, unique passwords for all services
# 3. Generate secure secrets using: openssl rand -base64 32
# 4. Use different credentials for development and production
# 5. Regularly rotate your secrets and passwords
# 6. Keep your .env.local file secure and private
